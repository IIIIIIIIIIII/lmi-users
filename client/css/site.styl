html
  height 100%

body
  height 100%
  background-color #aa4639

h3
  font-style italic
  color rgba(255, 255, 255, 0.6)
  margin-top 0
  font-size 1.75em

.headr
  height 25%
  width 100%
  padding-top 15px
  padding-bottom 30px
  display table
  border-top 8px #ebebeb dashed
  border-bottom 3px #ebebeb dashed
  h1
    font-size 3.5em
    display table-cell
    text-align center
    vertical-align middle

.content
  padding-top 25px

.suggestion-list
  display none

.suggestion-list-focus
  display block
  position absolute
  background-color #3c3c3c
  padding 3px
  overflow auto

.suggestion-list-focus li
  cursor pointer

.btn-simple
  background-color #ebebeb
  text-transform uppercase
  font-style italic
  font-size 14px
  color #333333
  border-radius 3px
  height 30px
  padding-top 3px
  transition .2s all ease-in-out
  &:hover, &:focus:hover
    color #333333
    background-color #d4776a
    border 1px #ebebeb dashed
    outline none
  &:active, &:focus
    color #333333
    background-color #ebebeb
    outline none

.birthday-chooser select
  margin-right 8px
  border: none;